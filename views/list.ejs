<!DOCTYPE html>
<html lang="en">
<head>
  <title>List video</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="/icon/css/all.css">
  
</head>
<body>
 
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2"></div>
        
        <div class="col-md-8-push-2">
            <table class="table table-hover">
                <thead>
                    <tr class="bg-success text-center">
                        <td colspan="6"><a href="add">Thêm video</a></td>
                    </tr>
                    <tr class="bg-primary">
                        <th>ID</th>
                        <th>Tiêu đề</th>
                        <th>Mô tả</th>
                        <th>Key</th>
                        <th>Ảnh</th>
                        <th>Edit-Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% results.forEach(item => { %>
                        <tr>
                        <td><%= item.id %></td>
                        <td><%= item.title %></td>
                        <td><%= item.description %></td>
                        <td><%= item.code %></td>
                        <td><img src="/uploads/<%= item.image %>" alt="" style="width: 100px; height: 100px;"></td>
                        <td><a href="edit/<%= item.id %>"><span class="fa fa-edit"></span></a> - <a onclick="return del()" href="/delete/<%= item.id %>"><span class="far fa-trash-alt"></span></a> </td>
                    </tr>
                   <% }); %>
                </tbody>
            </table>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
<script>
    function del() {
        return confirm("bạn có chắc muốn xóa ");
    }
</script>

</body>
</html>